<idea-plugin>
    <id>com.shenhua.idea.plugin.processviewer</id>
    <name>Android Process Viewer</name>
    <version>1.0</version>
    <vendor email="shenhuanet@126.com" url="http://www.shenhuanet.com">ShenhuaTech</vendor>

    <description><![CDATA[
      Quickly to get the running process and background service on Android platfrom.<br>
    ]]></description>

    <change-notes><![CDATA[
      First release.<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow canCloseContents="false" anchor="bottom"
                    id="ProcessViewer" icon="/icons/icon_logo_13x13.png"
                    factoryClass="com.shenhua.idea.plugin.processviewer.factory.ProcessViewerFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="ProcessViewer.LeftGroup" text="LeftGroup" popup="false">
            <action id="ProcessViewer.RefreshAction" text="RefreshAction" description="Refresh datas"
                    icon="/icons/ic_refresh_datas_16x16.png"
                    class="com.shenhua.idea.plugin.processviewer.actions.RefreshAction">
                <keyboard-shortcut keymap="$default" first-keystroke="F5"/>
            </action>
            <action id="ProcessViewer.StopAction" text="StopAction" description="Stop the process"
                    icon="/actions/suspend.png"
                    class="com.shenhua.idea.plugin.processviewer.actions.StopProcessAction">
            </action>
            <action id="ProcessViewer.Clean" text="CleanAction" description="Clean the showing datas"
                    icon="/actions/gc.png"
                    class="com.shenhua.idea.plugin.processviewer.actions.CleanDatasAction">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt C"/>
            </action>

            <separator/>

            <action id="ProcessViewer.Settings" text="SettingsAction"
                    description="ProcessViewer plugin preferences page"
                    icon="/general/ideOptions.png"
                    class="com.shenhua.idea.plugin.processviewer.actions.SettingsAction">
            </action>
            <action id="ProcessViewer.Help" text="HelpAction" description="Show the ProcessViewer plugin help"
                    icon="/actions/help.png"
                    class="com.shenhua.idea.plugin.processviewer.actions.HelpAction">
            </action>
            <action id="ProcessViewer.Close" text="CloseAction" description="Close the ProcessViewer plugin window"
                    icon="/actions/cancel.png"
                    class="com.intellij.ide.actions.CloseActiveTabAction">
            </action>
        </group>

        <group id="ProcessViewer.TopGroup" text="TopGroup" popup="false">
            <action id="ProcessViewer.RefreshDevicesAction"
                    class="com.shenhua.idea.plugin.processviewer.actions.RefreshDevicesAction"
                    text="RefreshDevicesAction"
                    description="Refresh the online devices if possible"
                    icon="/icons/ic_refresh_devices_16x16.png">
            </action>
        </group>
    </actions>

</idea-plugin>